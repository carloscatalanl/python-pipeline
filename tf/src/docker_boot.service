[Unit]
Description=docker boot
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/ubuntu/app
ExecStartPre=/usr/bin/docker-compose -f /home/ubuntu/app/docker-compose.yml pull
ExecStart=/usr/bin/docker-compose -f /home/ubuntu/app/docker-compose.yml up -d --remove-orphans

[Install]
WantedBy=multi-user.target